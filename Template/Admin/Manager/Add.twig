{% import "Layout/Common/Form.twig" as forms %}
{% extends "Layout/Main.twig" %}
{% block css %}
    <style>
        .custom-file-input:lang(en) ~ .custom-file-label::after {
            content: '{{ "Browse" | i18n }}';
        }
    </style>
{% endblock %}
{% block content %}
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="page-title">{{ "Add Manager" | i18n }}</h3>
                <div class="d-inline-block align-items-center">
                    <nav>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ basePath }}/"><i
                                            class="mdi mdi-home-outline"></i></a></li>
                            <li class="breadcrumb-item" aria-current="page"><a
                                        href="{{ basePath }}/Admin/Manager/">{{ "Manager List" | i18n }}</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">{{ "Add Manager" | i18n }}</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        {% if message %}
                            <h4 class="alert-{{ alert | default('success') }}">{{ message | i18n }}</h4>
                        {% endif %}
                        <form method="post" enctype="application/x-www-form-urlencoded">
                            {{ forms.hidden('action', 'submit') }}
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            {{ forms.select("Role"|i18n, 'roleid', roles, roleid) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            {{ forms.text("Name"|i18n, 'name', name, "Name"|i18n, null, null, false, true, 0, 30) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            {{ forms.text("Username"|i18n, 'user', user, "Username"|i18n, null, null, false, true, 0, 20) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            {{ forms.password("Password"|i18n, 'pass', pass) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions mt-4">
                                    {{ forms.submit("Submit"|i18n) }}
                                    {{ forms.btnLink("Cancel"|i18n, basePath ~ "/Admin/Manager/", "btn-danger") }}
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
{% endblock %}

{% block script %}
{% endblock %}
