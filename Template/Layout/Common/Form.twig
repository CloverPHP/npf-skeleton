{% macro hidden(name, value) %}
    <input id="{{ name }}" name="{{ name }}" type="hidden" value="{{ value|e }}"/>
{% endmacro %}

{% macro text(label, name, value, placeHolder = null, prefix = false, postfix = false, readonly = false, required = false, minLength = 0, maxLength = 0, style = '') %}
    {% if label is not empty %}
        <label class="font-weight-700 font-size-16"
               for="{{ name }}">{{ label }}</label>
    {% endif %}
    {% if prefix is empty and postfix is empty %}
        <input id="{{ name }}" name="{{ name }}" type="text"
               class="form-control"{% if style %} style="{{ style }}"{% endif %}
               placeholder="{{ placeHolder ?? label }}"
               value="{{ value|e }}"{% if readonly %} readonly{% endif %}{% if required %} required{% endif %}{% if minLength > 0 %} minlength="{{ minLength }}"{% endif %}{% if maxLength > 0 %} maxlength="{{ maxLength }}"{% endif %} />
    {% else %}
        <div class="input-group"{% if style %} style="{{ style }}"{% endif %}>
            {% if prefix %}
                <div class="input-group-prepend">{{ prefix }}</div>
            {% endif %}
            <input id="{{ name }}" name="{{ name }}" type="text" class="form-control"
                   placeholder="{{ placeHolder ?? label }}"
                   value="{{ value|e }}"{% if readonly %} readonly{% endif %}{% if required %} required{% endif %}{% if minLength > 0 %} minlength="{{ minLength }}"{% endif %}{% if maxLength > 0 %} maxlength="{{ maxLength }}"{% endif %} />
            {% if postfix %}
                <div class="input-group-append">
                    {{ postfix }}
                </div>
            {% endif %}
        </div>
    {% endif %}
{% endmacro %}

